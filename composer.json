{
    "name": "gabrielbatistacarvalho/buscador-cursos",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Alura\\BuscadorDeCursos\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Gabriel Batista de Carvalho",
            "email": "gabriel_carvalho26@hotmail.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.8",
        "symfony/dom-crawler": "^7.1",
        "symfony/css-selector": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "squizlabs/php_codesniffer": "^3.10",
        "phan/phan": "^5.4"
    },

    "scripts": {
        "cs": "phpcs --standard=PSR12 src/",
        "phan": "phan --allow-polyfill-parser src\\Buscador.php",
        "check": [
            "@phan",
            "@cs"
        ],
        "post-update-cmd": [
            "@check"
        ]
    },
    "scripts-descriptions": {
        "check": "Roda as verificações do código. PHAN e CS."
    }
}
